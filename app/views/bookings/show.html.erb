<h1>Ta place est réservée !</h1>
<%= form_with(model: @booking, url: event_bookings_path(@event), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :event_id %>
    <%= form.text_field :event_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Book Event", class: "btn btn-primary" %>
  </div>
<% end %>
