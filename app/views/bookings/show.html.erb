<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h1>Ta place est réservée !</h1>

      <h2>Informations sur l'événement</h2>
        <ul>
          <li><p><strong>Événement :</strong> <%= @event.title %></p></li>
          <li><p><strong>Date :</strong> <%= @event.date %></p></li>
          <li><p><strong>Adresse :</strong> <%= @event.address %></p></li>
          <li><p><strong>Prix :</strong> <%= @event.price %> €</p></li>
        </ul>

      <%= link_to "Evénements", events_path, class: "btn btn-outline-warning" %>
      <%= link_to "Dashboard", dashboard_path, class: "btn btn-outline-warning" %>
    </div>
  </div>
</div>
