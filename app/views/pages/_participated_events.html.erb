  <h2>Mes réservations à venir</h2></br>
    <% if current_user.bookings.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Événement</th>
            <th>Statut</th>
            <th>Lien</th>
          </tr>
        </thead>
        <tbody>
          <% current_user.bookings.each do |booking| %>
            <% event = booking.event %>
            <% if event.future? %>
              <tr>
                <td><%= event.date.strftime("%d/%m/%Y") %></td>
                <td><%= event.sport.sport_name %> à <%= event.address.split.last(2).first.chomp(',') %></td>
                <td>
                  <% if booking.booking_status == "En attente de validation" %>
                    <div>Tu as postulé à cette activité - En attente</div>
                  <% elsif booking.booking_status == "Acceptée" %>
                    <div>Inscription validée : tu vas participer à cette activité</div>
                  <% elsif booking.booking_status == "Refusée" %>
                    <div>Ta demande a été refusée</div>
                  <% end %>
                </td>
                <td><%= link_to "Voir l'activité", event_path(event), class: "btn btn-info btn-sm" %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div>Tu n'as pas encore réservé d'activité</div>
    <% end %>

  </br>

  <h2>Mes réservations passées</h2></br>
  <% if current_user.bookings.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Événement</th>
          <th>Statut</th>
          <th>Lien</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.bookings.each do |booking| %>
          <% event = booking.event %>
          <% if event.past? %>
            <tr>
              <td><%= event.date.strftime("%d/%m/%Y") %></td>
              <td><%= event.sport.sport_name %> à <%= event.address.split.last(2).first.chomp(',') %></td>
              <td><% if booking.booking_status == "Acceptée" %>
                  <div>Inscription validée : tu as participé à cette activité</div>
                <% elsif booking.booking_status == "En attente de validation" %>
                  <div>Tu as postulé à cette activité - Demande non traitée..</div>
                <% elsif booking.booking_status == "Refusée" %>
                  <div>Ta demande a été refusée</div>
                <% end %></td>
              <td><% if booking.booking_status == "Acceptée" %>
              <%= link_to "Je laisse un avis", event_path(event), class: "btn btn-success btn-sm" %>
              <% else %><%= link_to "Revoir l'activité", event_path(event), class: "btn btn-secondary btn-sm" %>
              <% end %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div>Tu n'as pas de réservation passée</div>
  <% end %>
