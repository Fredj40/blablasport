<h3>Mes participations</h3>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="future-tab" data-toggle="tab" href="#future" role="tab" aria-controls="future" aria-selected="true">Evénements à venir</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="past-tab" data-toggle="tab" href="#past" role="tab" aria-controls="past" aria-selected="false">Evénements passés</a>
  </li>
</ul>

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="future" role="tabpanel" aria-labelledby="future-tab">
    <table class="table">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Date</th>
          <th>Places proposées</th>
          <th>Statut</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.bookings do |booking| %>
        <% #@events.select { |event| event.future? }.each do |event| %>
          <tr>
            <td><%= booking.event.sport.sport_name %></td>
            <td><%= booking.event.date.strftime("%d/%m/%Y") %></td>
            <td><%= booking.event.players_number %></td>
            <td><%= booking.booking_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="tab-pane fade" id="past" role="tabpanel" aria-labelledby="past-tab">
    <table class="table">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Date</th>
          <th>Places proposées</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @events.select { |event| event.past? }.each do |event| %>
          <tr>
            <td><%= event.sport.sport_name %></td>
            <td><%= event.date %></td>
            <td><%= event.players_number %></td>
            <td><%= event.user_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
