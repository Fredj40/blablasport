<h3>Mes événements</h3>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="created-tab" data-toggle="tab" href="#created" role="tab" aria-controls="created" aria-selected="true">Events Created</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pending-tab" data-toggle="tab" href="#pending" role="tab" aria-controls="pending" aria-selected="false">Pending Bookings</a>
  </li>
</ul>

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="created" role="tabpanel" aria-labelledby="created-tab">
    <table class="table">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Date</th>
          <th>Places proposées</th>
          <th>Statut</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.sport.sport_name %></td>
            <td><%= event.date %></td>
            <td><%= event.players_number %></td>
            <td><%= event.user_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
    <table class="table">
      <thead>
        <tr>
          <th>Evénement</th>
          <th>Participant</th>
          <th>Statut</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings_pending_review.each do |booking| %>
          <tr>
            <td><%= booking.event.sport.sport_name %></td>
            <td><%= booking.user.name %></td>
            <td><%= booking.user_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
