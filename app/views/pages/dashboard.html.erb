<div class="dashboard-container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-12">
      <h1>Mon tableau de bord</h1>
      </br>
      <%# <h3>Mes inscriptions :</h3> %>
        <% if @bookings.empty?  %>
          <p>Tu n'es inscrit à aucun événement</p>
        <% elsif @bookings.count == 1 %>
          <h3>Tu es inscrit à 1 événement</h3><br>
        <% else %>
          <h3>Tu es inscrit à <%= @bookings.count %> événements</h3><br>
        <% end %>

        <input id="tab1" type="radio" name="tabs" checked>
        <label for="tab1">Mes inscriptions</label>

        <input id="tab2" type="radio" name="tabs">
        <label for="tab2">Mes événements</label>

        <section id="content1">
          <%= render 'pages/participated_events' %>
        </section>

        <section id="content2">
          <%= render 'pages/my_events' %>
        </section>

      </div>
    </div>
  </div>
</div>
