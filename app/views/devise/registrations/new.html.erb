<div class="new-container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-4">

        <div class="form-login">
            <h2>Inscription</h2>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>
              <%= f.input :password,
                          label: "Mot de passe",
                          required: true,
                          hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                          input_html: { autocomplete: "Mot de passe" } %>
              <%= f.input :password_confirmation,
                          label: "Confirmer mot de passe",
                          required: true,
                          input_html: { autocomplete: "Confirmer mot de passe" } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "S'inscrire", class: "btn btn-outline-warning" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
