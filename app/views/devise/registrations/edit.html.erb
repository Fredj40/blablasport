<div class="container-edit">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <div class="form-login">
          <h2>Modifier mon profil</h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
            <%= f.error_notification %>
            <div class="row">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>En attente de confirmation de: <%= resource.unconfirmed_email %></p>
              <% end %>

              <div class="col-md-6">
                <%= f.input :first_name,
                            label: "Prénom",
                            required: true %>
              </div>

              <div class="col-md-6">
                <%= f.input :last_name,
                            label: "Nom",
                            required: true %>
              </div>

              <div class="col-md-6">
                <%= f.input :age,
                            label: "Age",
                            required: true,
                            input_html: { min: '12', step: '1' } %>
              </div>

              <div class="col-md-6">

                <%= f.input :sex,
                            label: "Sexe",
                            collection: ['Homme', 'Femme'],
                            required: true %>
              </div>

              <div class="col-md-6">
                <%= f.input :city,
                            label: "Ville" %>
              </div>

              <div class="col-md-6">
                <%= f.input :phone_number,
                            label: "Numéro de téléphone",
                            required: true %>
              </div>

              <div class="col-md-6">
                <%= f.input :email,
                            label: "Email de connexion",
                            required: true,
                            autofocus: true %>
              </div>

              <div class="col-md-6">
                <%= f.input :current_password,
                            label: "Mot de passe actuel",
                            input_html: { autocomplete: "Mot de passe actuel" } %>
              </div>

              <div class="col-md-6">
                <%= f.input :password,
                            label: "Nouveau mot de passe",
                            input_html: { autocomplete: "Nouveau mot de passe" } %>
              </div>

              <div class="col-md-6">
                <%= f.input :password_confirmation,
                            label: "Confirmer nouveau mot de passe",
                            input_html: { autocomplete: "Confirmer nouveau mot de passe" } %>
              </div>

              <div class="btn-edit-profile col-md-6">
                <%= f.button :submit, "Mettre à jour", class: "btn btn-success btn-sm" %>
              </div>

              <div class="btn-edit-profile col-md-6">
                <%= link_to "Retour au menu", events_path, class: "btn btn-secondary btn-sm" %>
              </div>

            </div>
          <% end %><br>

          <div class="d-flex justify-content-end">
            <div><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Es-tu vraiment sûr ?" }, method: :delete, class: "btn btn-danger btn-sm" %></div>
          </div>

      </div>
    </div>
  </div>
</div>
